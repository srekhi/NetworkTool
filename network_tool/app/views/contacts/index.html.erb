<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>




<br>
<% if user_signed_in? %>
  <% @contacts = current_user.contacts %>
    <% @contacts.each do |contact| %>
      <div class="link row clearfix">
        <h2>
          <%= link_to contact.name, contact %>
          <br>
          <small class="author">Submitted <%= time_ago_in_words(contact.created_at) %></small>
        </h2>
      </div>

        <div class="btn-group">
          <!-- <%= link_to contact_path(contact), method: :put, class: "btn btn-default btn-sm" do %> This was putting update button on index. not needed IMO.  -->
        </div>

      </div>
    <% end %>
  <% end %>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %> 

<% else %>
  <%= link_to "Sign up", new_user_registration_path %> 

<% end %>


<%= link_to "New Contact", new_contact_path %>
