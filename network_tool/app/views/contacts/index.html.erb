<% if user_signed_in? %>

  <h2> Contact List: </h2>
    <% @contacts = current_user.contacts %>
      <% @contacts.each do |contact| %>
        <div class="link row clearfix">
          <h4>
            <%= link_to contact.name, contact_path(contact.id) %>  <br>
            <%= link_to "Delete", contact_path(contact.id), :method => :delete, :class => "btn"%> 
            <br>
            <%= link_to 'Edit', edit_contact_path(contact.id), :class => "btn" %> 


           <!-- <small class="author">Submitted <%= time_ago_in_words(contact.created_at) %></small> -->
          </h4>
        </div>

         <!-- <div class="btn-group">
             <%= link_to contact_path(contact), method: :put, class: "btn btn-default btn-sm" do %> This was putting update button on index. not needed IMO.  
          </div> -->

      <% end %>
    <% end %>
    <br>
    <button class= 'btn-default'> <%= link_to "New Contact", new_contact_path %> </button>

<% else %>
  <h1 class = text-center> Welcome to NetworkTool! </h1> 
  <h2 class = text-center> This is a service that helps you keep in touch with friends, family, and coworkers. </h2>
  <h5 class = text-center> Please sign up (or sign in) above! </h5>

<% end %>


