<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

  <h1>Listing Contacts</h1>
    <% @contacts = current_user.contacts %>
      <% @contacts.each do |contact| %>
        <div class="link row clearfix">
          <h2>
            <%= link_to contact.name, contact_path(contact.id) %> 
           <!-- <small class="author">Submitted <%= time_ago_in_words(contact.created_at) %></small> -->
          </h2>
        </div>

         <!-- <div class="btn-group">
             <%= link_to contact_path(contact), method: :put, class: "btn btn-default btn-sm" do %> This was putting update button on index. not needed IMO.  
          </div> -->

      <% end %>
    <% end %>
    <%= link_to "New Contact", new_contact_path %>

<% else %>
  <h5> Welcome to NetworkTool. Make an account or sign in above! </h5>
<% end %>


