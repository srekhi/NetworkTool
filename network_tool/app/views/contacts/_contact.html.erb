<li id="contact-<%= contact.id %>">
  <%= link_to gravatar_for(contact.user, size: 50), contact.user %>
  <span class="user"><%= link_to contact.user.name, contact.user %></span>
  <span class="content"><%= contact.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(contact.created_at) %> ago.
  </span>
</li>