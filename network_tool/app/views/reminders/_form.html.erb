<%= form_for(@reminder) do |f| %>
  <% if @reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
      <% @reminder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :what_is_the_occasion? %><br> <!--dropdown menu to select birthday, job anniversary, holiday, just reaching out, wedding anniversary, etc. -->
    <%= f.select(:occasion, options_for_select([['Birthday', 'Birthday'], ['Holiday', 'Holiday'], ['Job Anniversary', 'Job Anniversary'], ['Wedding Anniversary', 'Wedding Anniversary'], ['Just Reaching Out', 'Just Reaching Out']]))  %>
  </div>
  <div class="field">
    <%= f.label :how_long_from_now? %><br>
    <%= f.text_field :time_from_now %> <!-- one field to enter a number, another dropdown menu to pick weeks/months/year-->
  </div>
  <div class="field">
    <%= f.label :text_or_email? %><br>
    <%= f.text_area :send_to %> <!-- drop down menu to select a text reminder or email reminder -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
