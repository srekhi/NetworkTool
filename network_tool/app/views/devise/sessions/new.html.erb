<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Log in</h2>
                    <hr>
                        <div class="col">
                            <div class="form-group row-lg-3">
                                <%= f.label :email %>
                                <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
                            </div>

                            <div class="clearfix"></div>                             
                            <div class="form-group row-lg-3">
                                <%= f.label :password %> 
                                <%= f.password_field :password, autofocus: true, class: "form-control", required: true %>
                            </div>
                            <div class="clearfix"></div>       

                            <div class="form-group row-lg-3">
                            <label>
                                <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %>Remember Me
                            </label>
                            </div>
                            <div class="form-group col-lg-12">
                                <%= f.submit "Sign in", class: "btn btn-default" %>
                            </div>
                        </div>
                    </div>
              </div>
    </div>
<% end %>


